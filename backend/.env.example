# API配置
API_V1_STR=/api/v1
API_PREFIX=/api/v1

# 安全配置
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS配置
CORS_ORIGINS=http://localhost:3000

# 数据库配置
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/moe_chat

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_RETRY_COUNT=3
REDIS_RETRY_INTERVAL=1.0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=2.0
REDIS_HEALTH_CHECK_INTERVAL=15
REDIS_KEY_PREFIX=moe_chat:

# 项目配置
PROJECT_NAME=MoE-Chat
APP_ENV=development
DEBUG=false
HOST=0.0.0.0
PORT=8000
VERSION=0.1.0
DESCRIPTION="MoE-Chat API"

# 模型服务配置
MODEL_SERVICE_URLS=http://localhost:8001
MODEL_SERVICE_TIMEOUT=60
MODEL_SERVICE_RETRY_COUNT=3
MODEL_SERVICE_RETRY_DELAY=1
MODEL_SERVICE_API_KEY=
MODEL_SERVICE_RECONNECT_MAX_TRIES=5
MODEL_SERVICE_DISCOVER_INTERVAL=300  # 服务发现间隔（秒）

# 文件上传配置
MAX_UPLOAD_SIZE=2097152  # 2MB
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# 文件清理配置
FILE_CLEANUP_INTERVAL=3600  # 默认每小时清理一次
FILE_TTL=86400  # 默认24小时后删除未关联文件

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=false

# 日志配置
LOG_LEVEL=ERROR
LOG_FORMAT="%(levelprefix)s | %(asctime)s | %(message)s"
LOG_FILE=logs/app.log

# 限流配置
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# 邮件配置
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=465
EMAIL_SENDER=your-email@example.com
EMAIL_SENDER_NAME=MoE-Chat
EMAIL_PASSWORD=your-email-password  # 在真实环境中使用授权码
EMAIL_USE_TLS=true

# 验证码配置
EMAIL_VERIFICATION_TTL=600  # 验证码有效期，单位秒
EMAIL_VERIFICATION_CODE_LENGTH=6  # 验证码长度
EMAIL_VERIFICATION_RETRY_INTERVAL=60  # 验证码重发间隔，单位秒